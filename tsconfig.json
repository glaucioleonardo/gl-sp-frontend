{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "commonJS",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
