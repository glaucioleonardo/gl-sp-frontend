{
  "name": "gl-sp-frontend",
  "version": "1.0.0",
  "description": "Common code for SharePoint 2013/2016 using among web front-end development such as pure JavaScript, ES6+ and TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/esm/index.js",
  "scripts": {
    "clean": "shx rm -rf dist lib",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-clean": "npm run clean && tsc && tsc -m es6 --outDir lib/esm",
    "build": "tsc && tsc -m es6 --outDir lib/esm",
    "fast-build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glaucioleonardo/gl-w-frontend.git"
  },
  "keywords": [
    "sharepoint",
    "sharepoint 2013",
    "sharepoint javascript tool",
    "sharepoint typescript tool",
    "sharepoint front-end",
    "sharepoint pure javascript",
    "sharepoint list",
    "sharepoint list items",
    "sharepoint connection"
  ],
  "author": "Gl√°ucio Leonardo Sant'ana",
  "license": "ISC",
  "homepage": "https://www.glauciosantana.com",
  "dependencies": {
    "sp-pnp-js": "^3.0.10"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "shx": "^0.3.2",
    "ts-node": "~8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.7.5"
  }
}
