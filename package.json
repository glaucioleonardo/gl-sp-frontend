{
  "name": "gl-sp-frontend",
  "version": "1.0.1",
  "description": "Common code for SharePoint 2013/2016 using among web front-end development such as pure JavaScript, ES6+ and TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/esm/index.js",
  "scripts": {
    "build-es5": "tsc -p ./tsconfig-es5.json",
    "build-es6": "tsc -p ./tsconfig-es6.json",
    "build": "npm run build-es5 && npm run build-es6",
    "clean": "shx rm -rf dist lib",
    "test": "npm run production && npm pack",
    "copy-assets": "copyfiles -a -u1 src/assets/** lib",
    "production": "npm run build && npm run copy-assets",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glaucioleonardo/gl-sp-frontend.git"
  },
  "keywords": [
    "sharepoint",
    "sharepoint 2013",
    "sharepoint javascript tool",
    "sharepoint typescript tool",
    "sharepoint front-end",
    "sharepoint pure javascript",
    "sharepoint list",
    "sharepoint list items",
    "sharepoint connection"
  ],
  "author": "Gl√°ucio Leonardo Sant'ana",
  "license": "ISC",
  "homepage": "https://www.glauciosantana.com",
  "dependencies": {
    "gl-w-frontend": "^1.4.18",
    "sp-pnp-js": "^3.0.10"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/xlsx-populate": "git+https://github.com/JanLoebel/types-xlsx-populate.git",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "shx": "^0.3.2",
    "tslint": "^5.20.1",
    "typescript": "~3.7.5"
  }
}
